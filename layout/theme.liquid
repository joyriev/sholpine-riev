<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="{{ shop.description }}">
    <meta name="keywords" content="{{ shop.keywords }}">
    <meta name="author" content="{{ shop.name }}">
    <meta name="generator" content="Shopify">
    <meta property="og:title" content="{{ page_title }}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ canonical_url }}">
    <meta property="og:site_name" content="{{ shop.name }}">
    <meta property="og:description" content="{{ shop.description }}">
    <meta property="og:image:width" content="600">
    <meta property="og:image:height" content="600">
    <meta property="og:locale" content="{{ shop.locale }}">
    <meta name="twitter:card" content="summary">
    <meta name="twitter:title" content="{{ page_title }}">
    <meta name="twitter:description" content="{{ shop.description }}">
    <meta name="twitter:image" content="{{ 'white_logo.png' | asset_img_url: 'master' }}">
    <meta name="twitter:image:alt" content="{{ shop.name }}">
    <meta name="twitter:site" content="@{{ shop.twitter_username }}">
    <meta name="twitter:creator" content="@{{ shop.twitter_username }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}
    <title>{{ shop.name }}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link
      href="{{ 'theme.css' | asset_url }}"
      rel="stylesheet"
      type="text/css"
      media="all" />

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}
    {{ content_for_layout }}
    {% sections 'footer-group' %}

    {% render 'cart' %}

    <script defer src="{{ 'theme.js' | asset_url }}"></script>
  </body>
</html>