<div class="features-grid section-{{ section.id }}-padding">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        <div class="feature-item flex items-start gap-3" {{ block.shopify_attributes }}>
          <div class="feature-icon text-3xl">{{ block.settings.icon }}</div>
          <div>
            <h3 class="feature-title font-bold text-sm">{{ block.settings.title }}</h3>
            <p class="feature-description text-xs text-gray-600">{{ block.settings.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

