<style>
  .hero-section-card {
    background-image: url('{{ section.settings.background_image | image_url }}');
  }
  @media (max-width: 768px) {
    .hero-section-card {
      background-image: url('{{ section.settings.mobile_background_image | image_url }}');
    }
  }
</style>
<div class="py-4">
  <div class="container">
    <div class="rounded-3xl px-6 py-8 md:p-12 bg-gradient-to-bl from-sky-100 to-rose-100 flex flex-col md:justify-center min-h-[780px] md:min-h-[580px] bg-cover bg-center hero-section-card">
      <div class="space-y-4 md:space-y-6">
        <h1 class="text-2xl md:text-3xl font-bold">{{ section.settings.title }}</h1>
        <p class="text-lg tracking-wide max-w-[450px]">{{ section.settings.subtitle }}</p>
        <div class="flex items-center gap-2">
          <a href="/collection/all" class="inline-block px-6 md:px-8 py-4 rounded-full bg-black text-white">SHOP ALL</a>
          <a href="/blogs/news" class="inline-block px-6 md:px-8 py-4 rounded-full bg-black text-white">DISCOVER</a>
        </div>
        <div class="flex items-center gap-2">
          <img
            class="w-24 h-auto brightness-0"
            src="{{ 'rating-stars.svg' | asset_url }}"
            alt="*****"
            width="66"
            height="13">
          <span class="leading-none inline-block pt-1 text-shadow-md text-shadow-white">
            {{ section.settings.reviews }}</span>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Home Hero",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_background_image",
        "label": "Mobile Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      }, {
        "type": "link_list",
        "id": "buttons",
        "label": "Buttons"
      }, {
        "type": "text",
        "id": "reviews",
        "label": "Reviews"
      }
    ],
    "presets": [
      {
        "name": "Home Hero"
      }
    ]
  }

{% endschema %}