<div class="press-mentions section-{{ section.id }}-padding bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="press-swiper max-w-5xl mx-auto relative">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide text-center px-4" {{ block.shopify_attributes }}>
            <h4 class="font-serif text-2xl mb-3">{{ block.settings.publication }}</h4>
            <p class="text-sm text-gray-700">"{{ block.settings.quote }}"</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Press Mentions",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "mention",
      "name": "Press Mention",
      "settings": [
        {
          "type": "text",
          "id": "publication",
          "label": "Publication Name",
          "default": "PUBLICATION"
        },
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Enter the press quote here..."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Press Mentions",
      "blocks": [
        {
          "type": "mention",
          "settings": {
            "publication": "ELOQUENT",
            "quote": "Everything I've ordered smells amazing and the scent really lasts!"
          }
        },
        {
          "type": "mention",
          "settings": {
            "publication": "VOGUE",
            "quote": "A lovely pick for holiday vibes or a quick, charming gift."
          }
        },
        {
          "type": "mention",
          "settings": {
            "publication": "COSMOPOLITAN",
            "quote": "This feels so authentic, and lasts longer than we thought."
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>
