<!-- Shop Scent Type Section -->
<div class="bg-gray-50" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="container mx-auto px-4">
    {% if section.settings.heading != blank %}
      <h2 class="text-4xl font-bold text-center mb-12">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'scent_card' %}
            <div class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-md transition-shadow" {{ block.shopify_attributes }}>
              <div class="h-48 flex items-center justify-center" style="background-color: {{ block.settings.bg_color | default: '#f3f4f6' }}">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', width: 300, height: 200, class: 'w-full h-full object-cover', alt: block.settings.title
                  }}
                {% else %}
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    {{ 'image' | placeholder_svg_tag: 'w-1/2 h-1/2' }}
                  </div>
                {% endif %}
              </div>
              <div class="p-6 text-center">
                {% if block.settings.title != blank %}
                  <h3 class="font-bold text-xl mb-4">{{ block.settings.title }}</h3>
                {% endif %}
                <a href="{{ block.settings.link }}" class="bg-black text-white block px-8 py-3 rounded-full font-medium w-full hover:bg-gray-800">
                  {{ block.settings.button_text | default: 'SHOP NOW' }}
                </a>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
    {% if section.settings.button_text != blank %}
      <div class="text-center mt-12">
        <a href="{{ section.settings.link }}" class="inline-flex items-center gap-2 font-bold text-lg hover:underline">
          {{ section.settings.button_text | default: 'SHOP FULL RANGE' }}
          <span class="w-6 h-6 bg-black text-white rounded-full inline-flex items-center justify-center text-sm">â†’</span>
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Shop Scent Types",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Section Heading",
        "default": "Shop scent type"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top Padding",
        "default": 64
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom Padding",
        "default": 64
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "SHOP NOW"
      }, {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "blocks": [
      {
        "type": "scent_card",
        "name": "Scent Card",
        "settings": [
          {
            "type": "text",
