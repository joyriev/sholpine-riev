{%- assign collection = collections[section.settings.collection] -%}

<div class="container mx-auto px-4 py-16" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.heading != blank %}
    <h2 class="text-4xl font-bold mb-8 text-center">{{ section.settings.heading }}</h2>
  {% endif %}
  
  <div class="grid grid-cols-2 sm:col-span-3 md:grid-cols-4 gap-4 md:gap-6 max-w-6xl mx-auto">
    {% if collection and collection.products_count > 0 %}
      {% for product in collection.products limit: section.settings.products_to_show %}
        {% render 'card-product', product: product %}
      {% endfor %}
    {% else %}
      {% for i in (1..section.settings.products_to_show) %}
        <div class="product-card">
          <div class="bg-gray-100 rounded-lg aspect-square mb-4"></div>
          <div class="h-4 bg-gray-200 rounded w-3/4 mb-2"></div>
          <div class="h-4 bg-gray-200 rounded w-1/2"></div>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "New Drops",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "New Drops"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 4,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "New Drops",
      "settings": {
        "heading": "New Drops",
        "products_to_show": 4
      }
    }
  ]
}
{% endschema %}
