<div class="container mx-auto px-4 py-16">
  {% paginate collection.products by 12 %}
    <h2 class="text-4xl font-bold mb-12 text-center">{{ collection.title }}</h2>
    <p>{{ collection.description }}</p>
    <div class="grid grid-cols-2 sm:col-span-3 md:grid-cols-4 gap-4 md:gap-6 mx-auto">
      {% for product in collection.products %}
        {% render 'card-product'
          , product: product %}
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <div class="flex justify-center mt-12">
        <nav
          class="flex items-center"
          role="navigation"
          aria-label="Pagination">
          {% if paginate.previous %}
            <a
              href="{{ paginate.previous.url }}"
              class="px-4 py-2 border rounded-l-lg hover:bg-gray-100"
              aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          {% else %}
            <span class="px-4 py-2 border rounded-l-lg text-gray-400" aria-disabled="true">&laquo;</span>
          {% endif %}

          {% for part in paginate.parts %}
            {% if part.is_link %}
              <a href="{{ part.url }}" class="px-4 py-2 border-t border-b border-r hover:bg-gray-100">
                {{ part.title }}
              </a>
            {% else %}
              {% if part.title == paginate.current_page %}
                <span class="px-4 py-2 bg-black text-white border-t border-b border-r">
                  {{ part.title }}
                </span>
              {% else %}
                <span class="px-4 py-2 border-t border-b border-r">
                  {{ part.title }}
                </span>
              {% endif %}
            {% endif %}
          {% endfor %}

          {% if paginate.next %}
            <a
              href="{{ paginate.next.url }}"
              class="px-4 py-2 border rounded-r-lg hover:bg-gray-100"
              aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          {% else %}
            <span class="px-4 py-2 border rounded-r-lg text-gray-400" aria-disabled="true">&raquo;</span>
          {% endif %}
        </nav>
      </div>
    {% endif %}

  {% endpaginate %}
</div>