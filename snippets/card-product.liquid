<a href="{{ product.url }}" class="block border bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition [&:hover_.opacity-0]:opacity-100">
  <div class="relative w-full aspect-square border-b overflow-hidden">
    {% if product.tags contains 'bestseller' %}
      <span class="absolute top-3 right-3 bg-indigo-400 text-white text-xs font-bold px-3 py-1 rounded-full">BESTSELLER</span>
    {% endif %}
    <img
      src="{{ product.featured_image | image_url: width: 300 }}"
      alt="Product"
      height=""
      width=""
      loading="lazy"
      class="w-full h-full object-contain object-center">
    <img
      src="{{ product.images[1] | image_url: width: 300 }}"
      alt="{{  product.title }}"
      height=""
      width=""
      loading="lazy"
      class="absolute inset-0 opacity-0 transition-opacity duration-700">
  </div>
  <div class="p-4">
    <div class="flex items-center gap-1 mb-2">
      <img
        src="{{ 'rating-stars.svg' | asset_url }}"
        alt="*****"
        width="66"
        height="13">
      <span class="text-sm text-gray-600 leading-none pt-0.5">5.0/5</span>
    </div>
    <h3 class="font-bold mb-1 line-clamp-1">{{ product.title }}</h3>
    <p class="text-sm text-gray-600 mb-2">"...{{ product.metafields.custom.nuta }}..."</p>
    <div class="flex items-center gap-2">
      <span class="font-bold text-lg">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="text-gray-500 line-through text-sm">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
  </div>
</a>